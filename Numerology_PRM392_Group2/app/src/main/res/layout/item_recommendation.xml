<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/recommendation_background">

    <ImageView
        android:id="@+id/recommendationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Recommendation Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/recommendationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/recommendationIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recommendationMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintStart_toEndOf="@id/recommendationIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommendationNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>